package studentManager;

import java.util.ArrayList;
import java.util.Scanner;

import day14.Subject;

//class - studentManager - 인터페이스 구현
//
//class - main
//- 메뉴 구성
//학생 등록
//학생확인(학생리스트)
//학생검색(한 학생의 정보 출력 with 수강정보)
//수강신청
//수강철회
//종료
public interface program {
	void printStudent(); //학생 전체 리스트
	void insertStudent(Scanner scan); // 스캐너로 입력받기
	void searchStudent(Scanner scan); //	학생 검색
	void registerSubject(Scanner scan); //	수강신청
	void deleteSubject(Scanner scan); //	수강철회	
}

class subject {
	String code = null;
	String subject = null;
	String point = null;
	String semester = null;
	String name = null;
	//	과목 클래스:  한 과목의 정보를 나타내는 클래스
	ArrayList<Subject> korean = new ArrayList<>();
	ArrayList<Subject> english = new ArrayList<>();
	ArrayList<Subject> math = new ArrayList<>();
	ArrayList<Subject> social = new ArrayList<>();
	ArrayList<Subject> science = new ArrayList<>();

	//	과목코드 과목명 학점 시수 교수명 학기 분류 수업시간표
	Subject sub = new Subject(code, subject, point, semester, name);
	korean.add(sub("00", "국어", "1", "2", "김국어"));
	english.add(sub("01", "영어", "1", "2", "이영어"));
	math.add(sub("02", "수학", "1", "2", "박수학"));
	social.add(sub("03", "사회", "1", "2", "최사회"));
	science.add(sub("00", "과학", "1", "2", "임과학"));
	
}

class student {
	//	학생 클래스: 한 학생의 정보를 나타내는 클래스
	//	학번 이름 주민번호 학부 학과 수강과목(과목클래스를 배열 생성)
	//	수강과목의 번지를 대신할 count
	//	메서드 
	//	수강과목 추가(배열이 다 찼다면 늘려주기)
	//	수강과목 삭제
}
