package studentManager;

import java.util.ArrayList;
import java.util.Scanner;


public interface Program {
	void printStudent(); //학생 전체 리스트
	void insertStudent(Scanner scan); // 스캐너로 입력받기
	void searchStudent(Scanner scan); //	학생 검색
	void registerSubject(Scanner scan); //	수강신청
	void deleteSubject(Scanner scan); //	수강철회	
}

class Subject {
	public ArrayList<Integer> getCode() {
		return code;
	}
	public void setCode(ArrayList<Integer> code) {
		this.code = code;
	}
	public ArrayList<String> getSubject() {
		return subject;
	}
	public void setSubject(ArrayList<String> subject) {
		this.subject = subject;
	}
	public ArrayList<Integer> getPoint() {
		return point;
	}
	public void setPoint(ArrayList<Integer> point) {
		this.point = point;
	}
	public ArrayList<Integer> getSemester() {
		return semester;
	}
	public void setSemester(ArrayList<Integer> semester) {
		this.semester = semester;
	}
	public ArrayList<String> getName() {
		return name;
	}
	public void setName(ArrayList<String> name) {
		this.name = name;
	}
	ArrayList<Integer> code = new ArrayList<>();
	ArrayList<String> subject = new ArrayList<>();
	ArrayList<Integer> point = new ArrayList<>();
	ArrayList<Integer> semester = new ArrayList<>();
	ArrayList<String> name = new ArrayList<>();
	code.add(0);
	code.add(1);
	code.add(2);
	code.add(3);
	code.add(4);
	subject.add("국어");
	subject.add("영어");
	subject.add("수학");
	subject.add("사회");
	subject.add("과학");
	point.add(1);
	point.add(1);
	point.add(1);
	point.add(1);
	point.add(1);
	semester.add(2);
	semester.add(2);
	semester.add(2);
	semester.add(2);
	semester.add(2);
	name.add("김국어");
	name.add("이영어");
	name.add("박수학");
	name.add("최사회");
	name.add("임과학");
	//	과목 클래스:  한 과목의 정보를 나타내는 클래스
	//	과목코드 과목명 학점 시수 교수명 학기 분류 수업시간표
}

class studentManager implements program{
	ArrayList<String> studInfo = new ArrayList<>();
	ArrayList<String> subList = new ArrayList<>();
	@Override//학생 전체 리스트
	public void printStudent(Scanner scan) {
		for(int i = 0; i < studInfo.size(); i++) {
			System.out.print(studInfo.get(i) + " ");
		}	
	}

	@Override// 스캐너로 입력받기
	public void insertStudent(Scanner scan) {
		System.out.println("이름을 입력하세요: ");
		String studName = scan.next();
		studInfo.add(studName);
	}

	@Override//	학생 검색
	public void searchStudent(Scanner scan) {
		System.out.println("검색할 학생의 이름을 입력해주세요: ");
		String searchName = scan.next();
		for(int i = 0; i < studInfo.size(); i++) {
			if(searchName.equals(studInfo.get(i))) {
				System.out.println(searchName + "수강내역 추가");
			}
		}
	}

	@Override//	수강신청
	public void registerSubject(Scanner scan) {
		System.out.println("수강신청할 학생의 이름을 입력해주세요: ");
		String searchName = scan.next();
		for(int i = 0; i < studInfo.size(); i++) {
			if(searchName.equals(studInfo.get(i))) {
				subList.add(searchName);
			}
		}
	}

	@Override//	수강철회
	public void deleteSubject(Scanner scan) {
		System.out.println("수강철회할 학생의 이름을 입력해주세요: ");
		String searchName = scan.next();
		for(int i = 0; i < studInfo.size(); i++) {
			if(searchName.equals(studInfo.get(i))) {
				System.out.println(searchName + "수강내역 추가");
			}
		}
	}
	//	학생 클래스: 한 학생의 정보를 나타내는 클래스
	//	학번 이름 주민번호 학부 학과 수강과목(과목클래스를 배열 생성)
	//	수강과목의 번지를 대신할 count
	//	메서드 
	//	수강과목 추가(배열이 다 찼다면 늘려주기)
	//	수강과목 삭제
	
}
